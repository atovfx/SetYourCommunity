# Variables d'environnement nécessaires pour Heroku

# Database (ajouté automatiquement par Heroku Postgres)
DATABASE_URL=

# JWT
JWT_SECRET=your-strong-jwt-secret-here
JWT_EXPIRES_IN=7d

# OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Instagram Graph API
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret
INSTAGRAM_REDIRECT_URI=https://your-app-name.herokuapp.com/auth/meta/callback

# WhatsApp Business API
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-verify-token

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-app-name.herokuapp.com/api/auth/google/callback

# Frontend
FRONTEND_URL=https://app.setyourcommunity.fun

# Server
NODE_ENV=production
PORT=4000
